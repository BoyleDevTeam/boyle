{
    "version": 10,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 31,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "linux-gcc-x64",
            "displayName": "Linux GCC x86_64-pc-linux-gnu",
            "description": "Using compilers: C = /usr/bin/gcc, CXX = /usr/bin/g++",
            "toolchainFile": "${sourceDir}/cmake/toolchains/linux-gcc-x64.cmake",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "installDir": "${sourceDir}/out/install/${presetName}",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "BOYLE_USE_AVX512": false,
                "BOYLE_USE_BLAS_LAPACK": true,
                "BOYLE_USE_BOOST_UNORDERED": true
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        },
        {
            "name": "linux-clang-x64",
            "displayName": "Linux Clang x86_64-pc-linux-gnu",
            "description": "Using compilers: C = /usr/bin/clang, CXX = /usr/bin/clang++",
            "toolchainFile": "${sourceDir}/cmake/toolchains/linux-clang-x64.cmake",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "installDir": "${sourceDir}/out/install/${presetName}",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "BOYLE_USE_AVX512": false,
                "BOYLE_USE_BLAS_LAPACK": true,
                "BOYLE_USE_BOOST_UNORDERED": true
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        },
        {
            "name": "windows-msvc-x64",
            "displayName": "Windows MSVC x86_64",
            "description": "Using compilers: C = cl.exe, CXX = cl.exe",
            "toolchainFile": "${sourceDir}/cmake/toolchains/windows-msvc-x64.cmake",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "installDir": "${sourceDir}/out/install/${presetName}",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "BOYLE_USE_AVX512": false,
                "BOYLE_USE_BLAS_LAPACK": false,
                "BOYLE_USE_BOOST_UNORDERED": true
            },
            "vendor": {
                "microsoft.com/VisualStudioSettings/CMake/1.0": {
                    "hostOS": [
                        "Windows"
                    ]
                }
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "linux-gcc-x64",
            "displayName": "Linux GCC x86_64-pc-linux-gnu",
            "configurePreset": "linux-gcc-x64",
            "inheritConfigureEnvironment": true,
            "targets": "all",
            "jobs": 0
        },
        {
            "name": "linux-clang-x64",
            "displayName": "Linux Clang x86_64-pc-linux-gnu",
            "configurePreset": "linux-clang-x64",
            "inheritConfigureEnvironment": true,
            "targets": "all",
            "jobs": 0
        },
        {
            "name": "windows-msvc-x64",
            "displayName": "Windows MSVC x86_64",
            "configurePreset": "windows-msvc-x64",
            "inheritConfigureEnvironment": true,
            "targets": "all",
            "jobs": 0
        }
    ],
    "testPresets": [
        {
            "name": "linux-gcc-x64",
            "displayName": "Linux GCC x86_64-pc-linux-gnu",
            "configurePreset": "linux-gcc-x64",
            "inheritConfigureEnvironment": true,
            "output": {
                "outputOnFailure": true
            },
            "execution": {
                "jobs": 0
            }
        },
        {
            "name": "linux-clang-x64",
            "displayName": "Linux Clang x86_64-pc-linux-gnu",
            "configurePreset": "linux-clang-x64",
            "inheritConfigureEnvironment": true,
            "output": {
                "outputOnFailure": true
            },
            "execution": {
                "jobs": 0
            }
        },
        {
            "name": "windows-msvc-x64",
            "displayName": "Windows MSVC x86_64",
            "configurePreset": "windows-msvc-x64",
            "inheritConfigureEnvironment": true,
            "output": {
                "outputOnFailure": true
            },
            "execution": {
                "jobs": 0
            }
        }
    ]
}
